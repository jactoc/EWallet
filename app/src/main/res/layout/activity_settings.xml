<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jactoc.ewallet.SettingsActivity"
    android:background="@color/sand_yellow">


    <com.jactoc.ewallet.util.AnimCheckBox
        android:id="@+id/checkboxSettings"
        android:layout_gravity="center_horizontal"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:stroke_width="3dp"
        app:stroke_color="@color/colorPrimary"
        app:circle_color="@color/sand_yellow"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember password"
        android:textColor="@color/black"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/checkboxSettings"
        android:layout_toEndOf="@+id/checkboxSettings"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/checkboxSettings"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you can change your settings."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/black" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DELETE ALL"
        android:onClick="DELETEALL"
        android:id="@+id/DELETEALL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20dp" />

</RelativeLayout>
